{
  "manifest_version": 3,
  "name": "NordSales Extension",
  "version": "1.0.0",
  "description": "Chrome extension for Dynamics Sales",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.crm.dynamics.com/*"
  ]
}